# API Gateway settings
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000

# JWT settings
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis settings for rate limiting
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rate limiting
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Service URLs
AUTH_SERVICE_URL=http://auth-service:8001
PATIENT_SERVICE_URL=http://patient-service:8002
APPOINTMENT_SERVICE_URL=http://appointment-service:8003
EXERCISE_SERVICE_URL=http://exercise-service:8004
PROGRESS_SERVICE_URL=http://progress-service:8005
COMMUNICATION_SERVICE_URL=http://communication-service:8006
FILE_SERVICE_URL=http://file-service:8007

# Logging
LOG_LEVEL=INFO
